# =============================================================================
# Keepr Docker Environment Configuration
# =============================================================================
# Copy this file to .env and configure your settings before running:
#   docker compose up --build
#
# Access your Keepr instance at: http://localhost:8080
# =============================================================================

# =============================================================================
# Django Settings
# =============================================================================

# SECRET_KEY: Generate a secure random key for production
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-me-in-production

# DATA_DIR: Directory for media files and backups (relative or absolute path)
# Default: ./data (creates a "data" folder in the project directory)
# Examples: /var/keepr/data, ~/keepr-data, ./my-custom-data
DATA_DIR=./data

# DEBUG: Set to 'true' for development, 'false' for production
DEBUG=false

# ALLOWED_HOSTS: Comma-separated list of valid hostnames
# For local: localhost,127.0.0.1
# For production: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# CORS_ALLOWED_ORIGINS: Comma-separated list of allowed frontend origins
CORS_ALLOWED_ORIGINS=http://localhost:8080

# =============================================================================
# Database Configuration
# =============================================================================

POSTGRES_DB=keepr
POSTGRES_USER=keepr
# CHANGE THIS PASSWORD IN PRODUCTION!
POSTGRES_PASSWORD=change-me-in-production

# DB_DIR: Database storage location (optional)
# Leave empty to use Docker volume (recommended - managed by Docker)
# Set to a host path to store database outside Docker (e.g., for easy backups)
# Examples: ./data/postgres, /var/keepr/postgres, ~/keepr-db
# DB_DIR=

# =============================================================================
# Admin Superuser (Optional)
# =============================================================================
# If set, a superuser will be created automatically on first startup
# Leave empty to skip automatic admin creation
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-to-secure-password
ADMIN_EMAIL=admin@localhost

# =============================================================================
# Frontend Configuration
# =============================================================================

# Port for the frontend (default: 8080)
FRONTEND_PORT=8080

# Frontend URL (used for share links)
FRONTEND_URL=http://localhost:8080

# =============================================================================
# Email Configuration (Required for user verification)
# =============================================================================
# You need a Gmail account with App Password for email verification
# Get App Password: Google Account > Security > 2-Step Verification > App Passwords

GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password-here

# =============================================================================
# Application Settings
# =============================================================================

# ALLOW_SIGNUP: Set to 'false' to disable new user registrations
ALLOW_SIGNUP=true

# =============================================================================
# File Size Limits (in bytes)
# =============================================================================
# Text: 100KB, Images: 10MB, Videos: 100MB, Files: 20MB
MAX_TEXT_SIZE=102400
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
MAX_FILE_SIZE=20971520


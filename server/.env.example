# Database
# Options: PostgreSQL or SQLite
# PostgreSQL: postgresql://user:password@localhost:5432/keepr
# SQLite: sqlite:///db.sqlite3
DATABASE_URL=sqlite:///db.sqlite3

# Django
SECRET_KEY=change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Email (Gmail SMTP)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Limits (in bytes)
MAX_TEXT_SIZE=102400
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
MAX_FILE_SIZE=20971520

# S3 Backup (optional, configured per user in UI)
# These are default values that can be overridden per user
# DEFAULT_S3_BUCKET=
# DEFAULT_S3_REGION=us-east-1
